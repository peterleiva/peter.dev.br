{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"],
			"public/*": ["public/*"],
			"styles/*": ["styles/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
