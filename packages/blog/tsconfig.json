{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "esnext",
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"],
			"styles/*": ["styles/*"],
			"pages/*": ["src/pages/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "preserve",
		"allowJs": true,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
