{
	"extends": ["eslint:recommended", "prettier"],
	"overrides": [
		{
			"files": ["*.{tsx,ts}"],
			"extends": "./eslint/typescript"
		},
		{
			"files": ["./packages/{resume,client,blog}/**/*"],
			"extends": "./eslint/react"
		},
		{
			"files": "**/__tests__/**/*",
			"extends": "./eslint/jest"
		},
		{
			"files": [
				"./*.js",
				"./packages/*.js",
				"./packages/*/*.js",
				"./eslint/**/*.js"
			],
			"extends": "./eslint/node"
		},
		{
			"files": "**/*.json",
			"extends": "plugin:json/recommended"
		}
	]
}
