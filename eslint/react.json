{
  "env": {
    "browser": true
  },
  "plugins": ["jsx-a11y"],
  "parserOptions": {
    "ecmaFeatures": "jsx"
  },

  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended"
  ],

  "settings": {
    "react": {
      "linkComponents": [
        "Hyperlink",
        { "name": "Link", "linkAttribute": "href" }
      ]
    }
  }
}
